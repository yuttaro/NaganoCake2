
  <h1>マイページ</h1>
  <div class="row ml-5">

    <h4>登録情報
      <div class="btn ml-5">
      <%= link_to "編集する", customers_information_edit_path, class:"btn btn-success btn-sm" %>
      </div>
    </h4>
  </div>
  <div class="container m-5">
  <table class="table table-bordered">
    <tbody>
      <tr>
        <th class="col-3">氏名</th>
        <th><%= @customer.first_name %> <%= @customer.last_name %></th>
      </tr>
      <tr>
        <th>カナ</th>
        <th><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></th>
      </tr>
      <tr>
        <th>郵便番号</th>
        <th><%= @customer.postal_code %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= @customer.address %></th>
      </tr>
      <tr>
        <th>電話番号</th>
        <th><%= @customer.telephone_number %></th>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>
    </tbody>
  </table>
  <div>
    <div class="row">
      <h4>注文履歴
        <div class="btn ml-5">
          <%= link_to "一覧を見る", orders_path, class:"btn btn-success btn-sm" %>
        </div>
      </h4>
    </div>
  </div>
</div>
