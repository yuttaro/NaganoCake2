  <div class="row m-3">
    <div class="col offset-md-2">
      <h4>顧客の登録編集画面</h4>
    </div>
  </div>

<%= form_with model: @customer, url: customers_information_path(@customer.id), method: :patch do |f| %>
<div class="justify-content-center">
  <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
          <td></td>
        </tr>
          <th>氏名</th>
          <td><%= f.text_field :first_name %></td>
          <td><%= f.text_field :last_name %></td>
        <tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :first_name_kana %></td>
          <td><%= f.text_field :last_name_kana %></td>
        <tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
          <td></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          <td></td>
        </tr>
      </table>
      <div class="row pl-5">
        <div class="actions">
          <%= f.submit "変更を保存", class:"btn btn-sm btn-success" %>
        </div>
        <div class="text-center font-bold text-red-500 pl-5">
          <%= link_to "退会する", customers_confirm_withdraw_path, class:"btn btn-sm btn-danger" %>
        </div>
      </div>
<% end %>