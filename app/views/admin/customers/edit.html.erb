<div class="container">
  <div class="row m-3">
    <div class="col offset-md-2">
      <h4><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h4>
    </div>
  </div>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <div class="justify-content-center">
    <table class="table table-borderless">
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
        <td></td>
      </tr>
        <th>氏名</th>
        <td><%= f.text_field :first_name %></td>
        <td><%= f.text_field :last_name %></td>
      <tr>
      <tr>
        <th>フリガナ</th>
        <td><%= f.text_field :first_name_kana %></td>
        <td><%= f.text_field :last_name_kana %></td>
      <tr>
      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
        <td></td>
      </tr>
      <tr>
        <th>住所</th>
        <td colspan="2"><%= f.text_field :address %></td>
        <td></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number %></td>
        <td></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        <td></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会" %>
        </td>
      </tr>
    </table>
  </div>

  <div class="actions offset-md-3">
    <%= f.submit "変更を保存", class:"btn btn-lg btn-success" %>
  </div>
<% end %>

</div>
