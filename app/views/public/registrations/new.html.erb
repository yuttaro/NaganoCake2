<div class"container">

  <div class="row m-3">
    <div class="col offset-md-2">
      <h4>新規会員登録</h4>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table class="table table-borderless">
      <tr>
        <th>名前</th>
        <td><%= f.label :first_name,'(姓)' %></td>
        <td><%= f.text_field :first_name %></td>
        <td><%= f.label :last_name,'(名)' %></td>
        <td><%= f.text_field :last_name %></td>
      <tr>
      <tr>
        <th>フリガナ</th>
        <td><%= f.label :first_name_kana,'(セイ)' %></td>
        <td><%= f.text_field :first_name_kana %></td>
        <td><%= f.label :last_name_kana,'(メイ)' %></td>
        <td><%= f.text_field :last_name_kana %></td>
      <tr>
      <tr>
        <th><%= f.label :email,'メールアドレス' %></th>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :postal_code,'郵便番号' %></th>
        <td></td>
        <td><%= f.text_field :postal_code %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :address,'住所' %></th>
        <td></td>
        <td colspan="3"><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th><%= f.label :telephone_number,'電話番号' %></th>
        <td></td>
        <td><%= f.text_field :telephone_number %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :password,'パスワード(６文字以上)' %><% if @minimum_password_length %>
            <% end %>
        </th>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :password_confirmation,'パスワード（確認用）' %></th>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        <td></td>
        <td></td>
      </tr>
    </table>

    <div class="actions offset-md-3">
      <%= f.submit "新規会員登録", class:"btn btn-sm btn-success" %>
    </div>
  <% end %>

  <div class="row m-3">
    <div class="col offset-md-2">
      <h4>既に登録済みの方は</h4><br>
      <p><%= link_to  "こちら",new_customer_session_path %>からログインしてください</p>
    </div>
  </div>
</div>