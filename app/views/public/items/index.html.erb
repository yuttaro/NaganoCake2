<div class="col offset-2 p-3">
  <h4>商品一覧</h4>
</div>

<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div class="card">
            <%= image_tag item.get_profile_image(100,100) %>
            <%= link_to item_path(item.id) do %>
            <p>商品名：<%= item.name %></p>
            <p>￥：<%= item.price %></p>
          <%end%>
        </div>
      </div>
    <%end%>
  </div>
  <div class="row p-3">
    <div class="mx-auto">
      <%= paginate @items %>
    </div>
  </div>
</div>