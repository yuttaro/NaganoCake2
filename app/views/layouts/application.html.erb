<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/2ef6a91daf.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <%= link_to "LOGO", root_path, class:"btn btn-outline-secondary" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
          <% if admin_signed_in? %>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "会員一覧", admin_customers_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "注文履歴一覧", admin_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
            </li>
          </ul>
          <% elsif customer_signed_in? %>

          <div class="collapse navbar-collapse justify-content-center" id="navbar1">
            <span class="navbar-text justify-content-center">
              <p>ようこそ、<%= @customer.first_name %>さん！</p>
            </span>
          </div>

          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "マイページ", customers_mypage_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "カート", cart_items_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link" %>
            </li>
          </ul>
          <% else %>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "About", about_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_customer_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path, class: "nav-link" %>
            </li>
          </ul>
        <% end %>
        </div>
      </div>
    </nav>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
