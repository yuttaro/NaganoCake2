<div class="container">
  <div class="row m-3">
    <div class="col offset-md-2">
      <h4>商品詳細</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <div><%= image_tag @item.get_profile_image(100,100) %></div>
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th scope="row">商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th scope="row">商品説明</th>
            <td><%= @item.introduction %></td>
           </tr>
           <tr>
            <th scope="row">税抜価格</th>
            <td ><%= @item.price %>円</td>
           </tr>
        </tbody>
      </table>
    </div>
  </div>

   <div class="row justify-content-md-center">
    <div class="form-group">
      <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-sm btn-success" %>
    </div>
  </div>

</div>